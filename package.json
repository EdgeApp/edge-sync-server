{
  "name": "edge-sync-server",
  "version": "0.1.0",
  "private": true,
  "description": "A REST API for storing & syncing files",
  "repository": "https://github.com/EdgeApp/edge-sync-server",
  "license": "MIT",
  "author": "Airbitz, Inc.",
  "main": "lib/index.js",
  "scripts": {
    "build.lib": "sucrase -q -t typescript,imports,jsx -d ./lib ./src",
    "build.types": "tsc",
    "clean": "rimraf dist lib",
    "dev": "nodemon",
    "fix": "npm run lint -- --fix",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "precommit": "lint-staged && yarn test && yarn prepare",
    "prepare": "npm-run-all clean -p build.*",
    "start": "node -r sucrase/register src/index.ts",
    "posttest": "nyc report --reporter=cobertura --reporter=html",
    "test": "nyc yarn test.base --reporter mocha-multi-reporters --reporter-options configFile=./mocha-config.json",
    "test.base": "DATABASE=sync_datastore_test mocha 'test/**/*.test.ts'",
    "test.watch": "yarn test.base --watch --watch-files 'src/**/*, test/**/*'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn precommit"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@types/chai": "^4.2.9",
    "@types/mocha": "^7.0.1",
    "@types/node": "^14.14.10",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": ">=2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "chai": "^4.2.0",
    "eslint": ">=6.2.2",
    "eslint-config-standard-kit": ">=0.14.4",
    "eslint-plugin-import": ">=2.18.0",
    "eslint-plugin-node": ">=9.1.0",
    "eslint-plugin-prettier": ">=3.0.0",
    "eslint-plugin-promise": ">=4.2.1",
    "eslint-plugin-simple-import-sort": ">=4.0.0",
    "eslint-plugin-standard": ">=4.0.0",
    "husky": ">=3.0.0",
    "lint-staged": ">=9.0.0",
    "mocha": "^7.0.1",
    "mocha-junit-reporter": "^2.0.0",
    "mocha-multi-reporters": "^1.5.1",
    "mochawesome": "^6.2.1",
    "nodemon": "^2.0.6",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "prettier": ">=1.0.0",
    "sucrase": "^3.12.1",
    "typescript": "^4.0.5"
  },
  "dependencies": {
    "@types/express": "^4.17.2",
    "biggystring": "^3.0.2",
    "cleaners": "^0.3.2",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-promise-router": "^4.0.1",
    "nano": "^9.0.1",
    "supertest": "^6.0.1"
  }
}
